# Botglam Beauty - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=production

# Application URL (for CORS and redirects)
VITE_APP_URL=https://your-domain.com

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Server configuration
SERVER_HOST=your-server-ip-or-domain.com
SERVER_USER=your-server-username
SERVER_PORT=22

# Docker configuration (if using Docker deployment)
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (if using custom JWT)
JWT_SECRET=your-jwt-secret-here

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# EMAIL CONFIGURATION (if using custom email service)
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# =============================================================================
# PAYMENT CONFIGURATION (Paystack)
# =============================================================================
# Paystack public key
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Paystack secret key (server-side only)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (optional)
VITE_GA_TRACKING_ID=GA-XXXXXXXXX-X

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
VITE_DEBUG=false

# API base URL (if different from Supabase)
VITE_API_BASE_URL=https://your-api-domain.com

# =============================================================================
# SERVER-SIDE ONLY VARIABLES
# =============================================================================
# These should NOT be prefixed with VITE_ as they will be exposed to the client
# Database connection (if using custom database)
DATABASE_URL=postgresql://username:password@localhost:5432/Botglam_beauty

# Redis connection (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Session secret
SESSION_SECRET=your-session-secret-here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=/var/log/Botglam-beauty/app.log
